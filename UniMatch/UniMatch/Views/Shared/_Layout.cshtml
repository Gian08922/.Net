@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - UniMatch</title>
    <link rel="icon" href="~/images/Logo_UniMatch_Layout.png" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!--Iconos Bootstrap-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css" integrity="sha384-xeJqLiuOvjUBq3iGOjvSQSIlwrpqjSHXpduPd6rQpuiM3f5/ijby8pCsnbu5S81n" crossorigin="anonymous">
    <!--Jquery ui datepicker-->

    <link rel="stylesheet" href="//code.jquery.com/ui/1.13.0/themes/base/jquery-ui.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" />

    
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark  border-bottom box-shadow mb-3" style="background-color:#003865;">
            <div class="container" >
                @if (SignInManager.IsSignedIn(User))
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/images/Logo_UniMatch_Layout.png" alt="logo de la UniMatch" width="100" height="70" style="border-radius:5%; margin-right:30%;">
                        UniMatch
                    </a>
                }
                else
                {

                    <a class="navbar-brand" asp-area="" asp-controller="Cuentas" asp-action="Login">
                        <img src="~/images/Logo_UniMatch_Layout.png" alt="logo de la UniMatch" width="100" height="70" style="border-radius:5%; margin-right:30%;">
                        UniMatch
                    </a>
                }

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1" style="margin-left:10%;">



                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" style="font-size:large" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                            </li>
                          
                            <li class="nav-item">
                                <a class="nav-link text-white" style="font-size:large" asp-area="" asp-controller="Eventos" asp-action="Index">Eventos</a>
                            </li>
                            @if (User.IsInRole("Administrador"))
                            {

                                <li class="nav-item">
                                    <a class="nav-link text-white" style="font-size:large" asp-area="" asp-controller="Cuentas" asp-action="RegistroAdministrador">Crear Usuarios</a>
                                </li>
                                
                            }
                        }
                    </ul>
                    <!--Vista parcial para login y registro-->
                    <partial name="_LoginRegistroVp.cshtml" />

                </div>
            </div>
        </nav>
    </header>
    <div class="container m-indx">
        <main role="main" >
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted container-fluid" style="background-color:#003865; position:relative; margin-top:10%; ">
       
        <div class="row" style="text-align:center;">
            <div class="col-md-4">
                <a href="#" class="nav-link text-white" style="font-size:medium"> Aviso Legal</a>
            </div>
            <div  class="col-md-4">
                <a href="#" class="nav-link text-white" style="font-size:medium"> Política Cookies</a>
            </div>
            <div  class="col-md-4">
                <a href="#" class="nav-link text-white" style="font-size:medium"> Política Privacidad</a>
            </div>
        </div>
         <div class="container">
            &copy; 2022 - UniMatch -
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

