@model RegistroViewModel

@{
    ViewData["title"] = "Registro Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@if (TempData["Correcto"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Correcto"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="card">
    <div class="card-body">
        <h2 class="card-title text-center m-3" style="color:#003865;">Registro Usuario</h2>
        <form asp-controller ="Cuentas" asp-action="Registro" method="post" role="form" enctype="multipart/form-data">
            

            <div class="row mt-4">
                <div class="col-sm-6">
                    <div class="mb-3">
                        <label asp-for="Nombre" class="col-md-12"></label>
                        <input asp-for="Nombre" class="form-control"  placeholder="Introduce tu nombre"/>
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Edad" class="col-md-12"></label>
                        <input asp-for="Edad" class="form-control" placeholder="Introduce tu Edad" value ="18"/>
                        <span asp-validation-for="Edad" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="col-md-12"></label>
                        <input asp-for="Password" class="form-control" placeholder="Introduce tu contraseña" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Interes" class="col-md-12"></label>
                        <select asp-for="Interes" asp-items="@Html.GetEnumSelectList<Sexo>()" class="form-control">
                            <option disabled selected>-- Seleccionar interés Sexual --</option>
                        </select>
                        <span asp-validation-for="Interes" class="text-danger"></span>
                    </div>
                    
                </div>
                <div class="col-sm-6">
                    <div class="mb-3">
                        <label asp-for="NombreUniversidad" class="col-md-12"></label>
                        <select asp-for="NombreUniversidad" asp-items="@Html.GetEnumSelectList<NombreUni>()" class="form-control">
                            <option disabled selected>-- Seleccionar Nombre Universidad --</option>
                        </select>
                        <span asp-validation-for="NombreUniversidad" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="col-md-12"></label>
                        <input asp-for="Email" class="form-control" placeholder="Introduce tu email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="col-md-12"></label>
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Introduce de nuevo tu contraseña" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Sexo" class="col-md-12"></label>
                        <select asp-for="Sexo" asp-items="@Html.GetEnumSelectList<Sexo>()" class="form-control">
                            <option disabled selected>-- Selecciona tu sexo --</option>
                        </select>
                        <span asp-validation-for="Sexo" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="mb-3">
                        <label asp-for="Descripcion" class="col-md-12"></label>
                        <input asp-for="Descripcion" class="form-control" placeholder="Introduce una descripción" />
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>
                    
                </div>
                <div class= "col-sm-6">
                    <div class="mb-3">
                        <label value="Archivo"  class="col-md-12"></label>
                        <input asp-for="Archivo" class="form-control-file" multiple="true" type="file" />
                        <span asp-validation-for="Archivo" class="text-danger"></span>
                    </div>
                </div>
               
            </div>
            <div class="row">
                <div class="col-sm-6 mt-3 mb-3" style="margin-left:37%;">
                    <button type="submit" style="background-color:#003865;" class="btn text-white w-50 btn-lg">Registrarse</button>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}