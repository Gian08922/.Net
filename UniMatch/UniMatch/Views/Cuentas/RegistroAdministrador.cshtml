@model RegistroViewModel

@{
    ViewData["title"] = "Registro Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header" style="background-color:#BFCEDF;">
        <h2 class="card-title text-center" style="color:#003865;">Crear Usuario</h2>
    </div>
    <div class="card-body">
        <form asp-controller ="Cuentas" asp-action="RegistroAdministrador" method="post" role="form" enctype="multipart/form-data">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="row mt-4">

                <div class="col-sm-6">
                    <div class="mb-3">
                        <label asp-for="Nombre" class="col-md-12"></label>
                        <input asp-for="Nombre" class="form-control" placeholder="Introduce tu nombre" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Edad" class="col-md-12"></label>
                        <input asp-for="Edad" class="form-control" value="18" placeholder="Introduce tu Edad" />
                        <span asp-validation-for="Edad" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="col-md-12"></label>
                        <input asp-for="Password" class="form-control" placeholder="Introduce tu contraseña" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Interes" class="col-md-12"></label>
                        <select asp-for="Interes" asp-items="@Html.GetEnumSelectList<Sexo>()" class="form-control">
                            <option disabled selected>-- Seleccionar interes Sexual --</option>
                        </select>
                        <span asp-validation-for="Interes" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-sm-6">
                    <div class="mb-3">
                        <label asp-for="NombreUniversidad" class="col-md-12"></label>
                        <select asp-for="NombreUniversidad" asp-items="@Html.GetEnumSelectList<NombreUni>()" class="form-control">
                            <option disabled selected>-- Seleccionar Nombre Universidad --</option>
                        </select>
                        <span asp-validation-for="NombreUniversidad" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="col-md-12"></label>
                        <input asp-for="Email" class="form-control" placeholder="Introduce tu email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="col-md-12"></label>
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Introduce de nuevo tu contraseña" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Sexo" class="col-md-12"></label>
                        <select asp-for="Sexo" asp-items="@Html.GetEnumSelectList<Sexo>()" class="form-control">
                            <option disabled selected>-- Seleccionar tu sexo --</option>
                        </select>
                        <span asp-validation-for="Sexo" class="text-danger"></span>
                    </div>
                    
                </div>               
                <div class="col-sm-6">
                    <div class="mb-3">
                        <label value="Archivo"  class="col-md-12"></label>
                        <input asp-for="Archivo" class="form-control-file" multiple="true" type="file" />
                        <span asp-validation-for="Archivo" class="text-danger"></span>
                    </div>  
                </div>
                <div class="col-sm-6">
                    <div class="mb-3">
                        <label asp-for="RolSeleccionado" class="col-md-12"></label>
                        <select asp-for="RolSeleccionado" asp-items="@Model.ListaRoles" class="form-control">
                            <option disabled selected> -- Seleccionar rol --</option>
                        </select>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="mb-3">
                        <label asp-for="Descripcion" class="col-md-12"></label>
                        <input asp-for="Descripcion" class="form-control" placeholder="Introduce una descripción" />
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>
                </div>
            </div>
        
            <div class="row">
                <div class="col-sm-6 offset-5 mt-3">
                    <button type="submit" class="btn w-40 btn-lg" style="background-color:#003865; color:white;">Crear Usuario  <i class="bi bi-arrow-right-circle-fill"></i></button>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}